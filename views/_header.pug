header.header
    nav.nav.nav--tours
        a.nav__el.pos--mob(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user 
            a.nav__el.nav__el--logout.pos--mob--login Log out
            a.nav__el.pos--mob--signup(href='/me') 
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav.nav__el.pos--mob--login(href='/login') Login
            a.nav__el.nav__el--cta.pos--mob--signup(href='/signup') Sign up
